<%- model_class = Person -%>
<div class="page-header">
  <h1 id='contatti-header'>Contatti</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome</strong></dt>
  <dd><%= @person.nome %></dd>
  <dt><strong>Cognome</strong></dt>
  <dd><%= @person.cognome %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @person.mail %></dd>
  <dt><strong>Telefono</strong></dt>
  <dd><%= @person.tel1 %></dd>
  <dt><strong>Cellulare</strong></dt>
  <dd><%= @person.tel2 %></dd>
  <dt><strong>Ufficio</strong></dt>
  <dd><%= @person.tel3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:indirizzo) %>:</strong></dt>
  <dd><%= @person.indirizzo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comune) %>:</strong></dt>
  <dd><%= @person.comune %></dd>
  <dt><strong><%= model_class.human_attribute_name(:provincia) %>:</strong></dt>
  <dd><%= @person.provincia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:regione) %>:</strong></dt>
  <dd><%= @person.regione %></dd>
  <dt><strong><%= model_class.human_attribute_name(:incarico) %>:</strong></dt>
  <dd><%= @person.incarico %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seggio) %>:</strong></dt>
  <dd><%= @person.seggio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:riferimento) %>:</strong></dt>
  <dd><%= @person.riferimento %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.indietro")),
              people_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.modifica")),
              edit_person_path(@person), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.elimina")),
              person_path(@person),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Sei sicuro di voler eliminare?')) },
              :class => 'btn btn-danger' %>
</div>
